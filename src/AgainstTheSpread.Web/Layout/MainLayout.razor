@inherits LayoutComponentBase
@inject AgainstTheSpread.Web.Services.ApiService ApiService

<div class="page">
    @if (_gameLockingDisabled)
    {
        <div class="testing-mode-banner">
            <strong>TESTING MODE:</strong> Game locking is disabled.
            Picks can be made on past games.
            <em>Remember to disable this before the real season!</em>
        </div>
    }
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    private bool _gameLockingDisabled;

    protected override async Task OnInitializedAsync()
    {
        var config = await ApiService.GetConfigAsync();
        _gameLockingDisabled = config?.GameLockingDisabled ?? false;
    }
}
