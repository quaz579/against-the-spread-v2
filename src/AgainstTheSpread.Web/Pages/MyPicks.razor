@page "/my-picks"
@using AgainstTheSpread.Web.Services
@inject ApiService ApiService
@inject IAuthStateService AuthState
@inject NavigationManager NavigationManager

<PageTitle>My Picks - Against The Spread</PageTitle>

<div class="container">
    <h1>My Picks</h1>

    @if (!AuthState.IsAuthenticated)
    {
        <div class="alert alert-info">
            <h4>Sign in to view your picks</h4>
            <p>You need to be signed in to view your pick history and track your performance.</p>
            <button class="btn btn-primary" @onclick="SignIn">Sign In</button>
        </div>
    }
    else if (isLoading)
    {
        <div class="d-flex justify-content-center my-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (errorMessage != null)
    {
        <div class="alert alert-danger" role="alert">
            @errorMessage
        </div>
    }
    else if (myHistory != null)
    {
        <div class="row mb-4">
            <div class="col">
                <p class="text-muted">Welcome, @myHistory.DisplayName!</p>
            </div>
            <div class="col-auto">
                <select class="form-select" @bind="selectedYear" @bind:after="LoadMyHistory">
                    @foreach (var year in availableYears)
                    {
                        <option value="@year">@year</option>
                    }
                </select>
            </div>
        </div>

        <!-- Season Summary -->
        <div class="row mb-4 g-3">
            <div class="col-6 col-lg-3">
                <div class="card stats-card stats-card-wins h-100">
                    <div class="card-body text-center py-4">
                        <div class="stats-icon mb-2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" viewBox="0 0 16 16" aria-hidden="true">
                                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                            </svg>
                        </div>
                        <h2 class="card-title display-4 fw-bold mb-1">@myHistory.TotalWins</h2>
                        <p class="card-text text-uppercase letter-spacing mb-0">Wins</p>
                    </div>
                </div>
            </div>
            <div class="col-6 col-lg-3">
                <div class="card stats-card stats-card-losses h-100">
                    <div class="card-body text-center py-4">
                        <div class="stats-icon mb-2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" viewBox="0 0 16 16" aria-hidden="true">
                                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z"/>
                            </svg>
                        </div>
                        <h2 class="card-title display-4 fw-bold mb-1">@myHistory.TotalLosses</h2>
                        <p class="card-text text-uppercase letter-spacing mb-0">Losses</p>
                    </div>
                </div>
            </div>
            <div class="col-6 col-lg-3">
                <div class="card stats-card stats-card-pushes h-100">
                    <div class="card-body text-center py-4">
                        <div class="stats-icon mb-2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" viewBox="0 0 16 16" aria-hidden="true">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                <path d="M4 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 4 8z"/>
                            </svg>
                        </div>
                        <h2 class="card-title display-4 fw-bold mb-1">@myHistory.TotalPushes</h2>
                        <p class="card-text text-uppercase letter-spacing mb-0">Pushes</p>
                    </div>
                </div>
            </div>
            <div class="col-6 col-lg-3">
                <div class="card stats-card stats-card-winrate h-100">
                    <div class="card-body text-center py-4">
                        <div class="stats-icon mb-2">
                            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" viewBox="0 0 16 16" aria-hidden="true">
                                <path d="M2.5.5A.5.5 0 0 1 3 0h10a.5.5 0 0 1 .5.5c0 .538-.012 1.05-.034 1.536a3 3 0 1 1-1.133 5.89c-.79 1.865-1.878 2.777-2.833 3.011v2.173l1.425.356c.194.048.377.135.537.255L13.3 15.1a.5.5 0 0 1-.3.9H3a.5.5 0 0 1-.3-.9l1.838-1.379c.16-.12.343-.207.537-.255L6.5 13.11v-2.173c-.955-.234-2.043-1.146-2.833-3.012a3 3 0 1 1-1.132-5.89A33.076 33.076 0 0 1 2.5.5zm.099 2.54a2 2 0 0 0 .72 3.935c-.333-1.05-.588-2.346-.72-3.935zm10.083 3.935a2 2 0 0 0 .72-3.935c-.133 1.59-.388 2.885-.72 3.935z"/>
                            </svg>
                        </div>
                        <h2 class="card-title display-4 fw-bold mb-1">@myHistory.WinPercentage%</h2>
                        <p class="card-text text-uppercase letter-spacing mb-0">Win Rate</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Week by Week Results -->
        @if (myHistory.Weeks?.Any() == true)
        {
            <h2>Your Picks by Week</h2>

            @foreach (var week in myHistory.Weeks.OrderByDescending(w => w.Week))
            {
                <div class="card mb-3">
                    <div class="card-header d-flex justify-content-between align-items-center @(week.IsPerfect ? "bg-success text-white" : "")">
                        <span>
                            <strong>Week @week.Week</strong>
                            @if (week.IsPerfect)
                            {
                                <span class="badge bg-warning text-dark ms-2">PERFECT WEEK</span>
                            }
                        </span>
                        <span>
                            <span class="text-success fw-bold">@week.Wins W</span> -
                            <span class="text-danger">@week.Losses L</span>
                            @if (week.Pushes > 0)
                            {
                                <text> - </text><span class="text-muted">@week.Pushes P</span>
                            }
                        </span>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-sm table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>Matchup</th>
                                        <th class="text-center">Line</th>
                                        <th class="text-center">Your Pick</th>
                                        <th class="text-center">Result</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var pick in week.Picks)
                                    {
                                        <tr class="@GetPickRowClass(pick)">
                                            <td>@pick.Favorite vs @pick.Underdog</td>
                                            <td class="text-center">@FormatLine(pick.Line)</td>
                                            <td class="text-center fw-bold">@pick.SelectedTeam</td>
                                            <td class="text-center">
                                                @if (!pick.HasResult)
                                                {
                                                    <span class="badge bg-secondary">Pending</span>
                                                }
                                                else if (pick.IsPush == true)
                                                {
                                                    <span class="badge bg-secondary">PUSH</span>
                                                }
                                                else if (pick.IsWin == true)
                                                {
                                                    <span class="badge bg-success">WIN</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">LOSS</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="alert alert-info">
                <h4>No picks yet!</h4>
                <p>You haven't submitted any picks for @selectedYear yet.</p>
                <a href="/picks" class="btn btn-primary">Make Your Picks</a>
            </div>
        }
    }
</div>

@code {
    private int selectedYear = DateTime.Now.Year;
    private List<int> availableYears = new();
    private bool isLoading = true;
    private string? errorMessage;

    private ApiService.UserSeasonHistoryDto? myHistory;

    protected override async Task OnInitializedAsync()
    {
        // Set up available years
        var currentYear = DateTime.Now.Year;
        availableYears = Enumerable.Range(currentYear - 2, 3).Reverse().ToList();

        // Wait for auth state to initialize
        await AuthState.InitializeAsync();

        if (AuthState.IsAuthenticated)
        {
            await LoadMyHistory();
        }
        else
        {
            isLoading = false;
        }
    }

    private async Task LoadMyHistory()
    {
        isLoading = true;
        errorMessage = null;
        StateHasChanged();

        try
        {
            myHistory = await ApiService.GetMySeasonHistoryAsync(selectedYear);
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load your pick history: {ex.Message}";
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void SignIn()
    {
        AuthState.Login("/my-picks");
    }

    private string GetPickRowClass(ApiService.UserPickHistoryDto pick)
    {
        if (!pick.HasResult) return "";
        if (pick.IsPush == true) return "table-secondary";
        if (pick.IsWin == true) return "table-success";
        return "table-danger";
    }

    private string FormatLine(decimal line)
    {
        if (line == 0) return "PK";
        return line > 0 ? $"+{line}" : line.ToString();
    }
}
